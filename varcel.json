{
    "version": 2,
    "functions": {
    "api/**": {
      "memory": 2048, 
      "maxDuration": 60 
    }
  },
        "builds": [
          {
            "src": "api/**",
            "use": "@vercel/node"
          },
          {
            "src": "public/**",  
            "use": "@vercel/static"
          }
        ],
    "routes": [
      {
        "src": "/api/(.*)",       
        "dest": "/api/$1"
      },
      {
        "src": "/(.*)",           
        "dest": "/public/$1"
      }
    ],
    "cleanUrls": true,            
    "redirects": [
      {
        "source": "/old-url",
        "destination": "/new-url",
        "permanent": true         
      }
    ],
    "headers": [
      {
        "source": "/api/(.*)",       
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" }
        ]
      }
    ],
    "alias": ["your-app-name.vercel.app"],  
    "env": {
      "NODE_ENV": "production"      
    }
  }
  