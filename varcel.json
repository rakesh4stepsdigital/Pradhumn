{
    "version": 2,
    "functions": {
      "api/**": {
        "memory": 1024,       
        "maxDuration": 30        
        
      }
    },
    "builds": [
      {
        "src": "pages/api/**/*.js",     
        "use": "@vercel/node"          
      },
      {
        "src": "public/**",           
        "use": "@vercel/static"        
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/index.html"          
      }
    ]
  }
  